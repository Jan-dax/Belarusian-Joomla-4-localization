	<files>
		<folder type="language" client="administrator" id="be-BY">administrator/language/be-BY</folder>
		<folder type="language" client="api" id="be-BY">api/language/be-BY</folder>
		<folder type="language" client="site" id="be-BY">language/be-BY</folder>
	</files>
	<updateservers>
		<server type="collection" priority="1" name="Accredited Joomla! Translations">https://update.joomla.org/language/translationlist_4.xml</server>
	</updateservers>
